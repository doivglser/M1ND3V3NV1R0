#!/bin/bash
# startup file on /usr/local/bin   
# shi3lD 
# redundanz
LANG="C" ;
				if [ $EUID != 0 ] ;
		then
				gksudo "$0" ;
		else
	                if [[ $(ps axu | grep -v grep | grep -v nano | grep -v geany | grep -v hi_shi3lD | grep shi3lD) = '' ]] ;
        then
                xterm -title shi3lD -bw 0 -geometry 80x15+20-20 -e shi3lD &

	                if [[ $(ps axu | grep -v grep | grep -v nano | grep -v geany | grep -v hi_shi3lD | grep redundanz) = '' ]] ;
        then
				xterm -title redundanz -bw 0 -geometry 110x15+507-20 -e redundanz --monitor &
                exit 0 ;
        else
				exit 0 ;
		fi
fi
fi
hi_wicd-client ;
