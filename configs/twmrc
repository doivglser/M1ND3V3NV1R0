#
# And a menus with the usual things
#
menu "logoutShutdown"
{
"   lock"		f.exec "exec xscreensaver-command -lock &"
"   exit"		f.quit
"   reboot"		f.exec "gksudo -gm REBOOT? init 6 &"
"	poweroff"	f.exec "gksudo -gm POWEROFF? init 0 &"
}

