#!/bin/bash
# mindevenviro
# startup file on /usr/local/bin
LANG="C" ;
to_star_up(){
xsetroot -solid yellow &
oclock -hour red -minute white -bd white -fg yellow -bg black -jewel green -shape -geometry 70x75-3+3 &
xload -g 50x50-3+94 -fg "yellow" -bg "black" -bw 1 &
setsid xscreensaver -display :0 -no-splash >/dev/null 2>&1 < /dev/null &
xcompmgr -c &
sleep 2 ;
terminator &
sleep 2 ;
feh-bg &
	}
		if [[ $(ps axu | grep -v grep | grep terminator) = '' ]] && \
		[[ $(ps axu | grep -v grep | grep xload) != '' ]] && \
		[[ $(ps axu | grep -v grep | grep xscreensaver) != '' ]] ;
	then
		terminator &

		elif [[ $(ps axu | grep -v grep | grep oclock) = '' ]] || \
		[[ $(ps axu | grep -v grep | grep xload) = '' ]] || \
		[[ $(ps axu | grep -v grep | grep xscreensaver) = '' ]] ;
	then
		to_star_up ;
	else
		exit 0 ;
fi
