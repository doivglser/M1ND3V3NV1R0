#
# And a menus with the usual things
#
menu "main"
{
":: - M1N-D3V-3NV1R0 - ::"  f.title
":: VLC Media Player"  f.exec "exec vlc -I skins2 --skins2-last=/usr/share/vlc/skins2/169311-inkyV2.vlt &"
":: Geany Editor"  f.exec "exec geany &"
":: Transmission"  f.exec "exec transmission-gtk &"
":: Firefox-ESR"  f.exec "exec firefox-esr &"
":: PlayOnLinux"  f.exec "exec playonlinux &"
":: Background"  f.exec "exec feh-bg.sh &"
":: Terminator"  f.exec "exec /usr/local/bin/hi.sh &"
"Lock"		f.exec "exec xscreensaver-command -lock &"
"Kill"		f.destroy
"Restart"	f.restart
"Exit"		f.quit
}
